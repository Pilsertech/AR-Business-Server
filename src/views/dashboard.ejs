<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Admin Dashboard</title>

  <link rel="stylesheet" href="/css/style.css" />
</head>

<body>
  <div class="header">
    <h1>AR Content Dashboard</h1>
    <div class="header-buttons">
      <a href="/dashboard/new">＋ Add New Content</a>
      <a href="/auth/logout" class="logout-btn">Logout</a>
    </div>
  </div>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Asset Type</th>
        <th>AR Type</th>
        <th>Marker Status</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
    <% if (contents.length) { contents.forEach(item => { %>
      <tr>
        <td title="<%= item.description || '' %>"><%= item.title %></td>
        <td><%= item.assetType %></td>
        <td><%= item.contentType %></td>

        <!-- Show status only for marker‑based; dash otherwise -->
        <td>
          <% if (item.contentType === 'marker') { %>
            <% if (item.targetUrl) { %>
              <span class="status-ok">Uploaded</span>
            <% } else { %>
              <span class="status-missing">Missing</span>
            <% } %>
          <% } else { %>
            —
          <% } %>
        </td>

        <!-- Button group -->
        <td>
          <div class="btn-group">
            <a class="btn qr-btn"   href="<%= item.qrCodeUrl %>" download>Download QR</a>
            <a class="btn edit-btn" href="/dashboard/edit/<%= item.slug %>">Edit</a>

            <form action="/dashboard/delete/<%= item.slug %>"
                  method="POST"
                  data-delete>
              <button type="submit" class="btn delete-btn">Delete</button>
            </form>
          </div>
        </td>
      </tr>
    <% }) } else { %>
      <tr>
        <td colspan="5" style="text-align:center; padding:2rem;">
          No AR content yet.
        </td>
      </tr>
    <% } %>
    </tbody>
  </table>

  <script src="/js/dashboard.js" defer></script>
</body>
</html>
