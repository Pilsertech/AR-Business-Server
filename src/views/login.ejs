<% /* ===========================================================================
     login.ejs — Modern and AR-inspired Login Page (CSP-compliant)
     =========================================================================== */ %>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Admin Login | AR Business Server</title>
  <link rel="stylesheet" href="/viewCss/login.css" />
  <script src="/viewJs/login.js" defer></script>
</head>
<body>
  <div class="login-container">
    <h1>Admin Login</h1>
    <% if (typeof error !== 'undefined' && error) { %>
      <span class="error-message"><%= error %></span>
    <% } %>
    <form class="login-form" action="/auth/login" method="POST" autocomplete="off">
      <div class="form-group">
        <label for="email">Email Address</label>
        <input id="email" name="email" type="email" placeholder="admin@example.com" required autofocus />
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <div class="input-wrapper">
          <input id="password" name="password" type="password" placeholder="Your password" required />
          <button class="toggle-password" type="button" tabindex="-1" aria-label="Show/hide password" data-target="password">👁</button>
        </div>
      </div>
      <button class="login-btn" type="submit">Sign In</button>
    </form>
    <div class="login-footer">
      &copy; <%= new Date().getFullYear() %> AR Business Server
    </div>
  </div>
</body>
</html>